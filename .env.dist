# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LANGCHAIN_API_KEY=your_langsmith_api_key_here

# Server Configuration
AGENT_SERVER_HOST=localhost
AGENT_SERVER_PORT=8001
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8002
MCP_SERVER_NAME=photo-triage-mcp

# LangSmith Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=photo-triage-agent
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Image Processing Configuration
MAX_IMAGE_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,bmp,tiff
IMAGE_QUALITY_THRESHOLD=0.7

# LangGraph Configuration
LANGGRAPH_CHECKPOINT_DB=sqlite:///./langgraph_checkpoints.db
MAX_RETRY_ATTEMPTS=3
REFLECTION_ENABLED=true

# API Configuration
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
# TODO: SOMEHOW NOT WORKING
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=false
TESTING=false
ENVIRONMENT=development